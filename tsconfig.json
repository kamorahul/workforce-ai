{
  "compilerOptions": {
    "target": "es2018", // Or a newer version like ES2020, ES2022
    "module": "commonjs",
    "lib": ["esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true, // If you import JSON files
    "sourceMap": true, // For better debugging
    // "baseUrl": "./src", // If you want to use absolute paths from src
    // "paths": { ... } // For path aliases
  },
  "include": ["src/**/*"], // Files to include in compilation
  "exclude": ["node_modules", "**/*.test.ts", "dist"] // Files/directories to exclude
}
