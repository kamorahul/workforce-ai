# OpenClaw Integration Configuration
# Copy these to your .env file and enable the features you need

# =========================================
# Core OpenClaw Settings
# =========================================

# Enable OpenClaw integration (master switch)
OPENCLAW_ENABLED=false

# OpenClaw gateway URL (for future full OpenClaw integration)
OPENCLAW_GATEWAY=ws://localhost:18789

# OpenClaw API key (for future full OpenClaw integration)
OPENCLAW_API_KEY=

# =========================================
# Skills Configuration
# Enable skills individually for gradual migration
# =========================================

# Create task skill - allows AI to create tasks
OPENCLAW_SKILL_CREATE_TASK=true

# Create event skill - allows AI to create calendar events
OPENCLAW_SKILL_CREATE_EVENT=true

# Get tasks skill - allows AI to fetch user's tasks
OPENCLAW_SKILL_GET_TASKS=true

# Get events skill - allows AI to fetch user's calendar events
OPENCLAW_SKILL_GET_EVENTS=true

# Send email skill (future - not yet implemented)
OPENCLAW_SKILL_SEND_EMAIL=false

# Sync calendar skill (future - not yet implemented)
OPENCLAW_SKILL_SYNC_CALENDAR=false

# =========================================
# Platform Configurations (Phase 2+)
# =========================================

# WhatsApp integration (requires OpenClaw daemon)
OPENCLAW_WHATSAPP_ENABLED=false
OPENCLAW_WHATSAPP_WELCOME="Hi! I'm Kai, your work assistant. How can I help?"

# Telegram integration (requires OpenClaw daemon)
OPENCLAW_TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
OPENCLAW_TELEGRAM_WELCOME="Hi! I'm Kai, your work assistant. How can I help?"

# Slack integration (future)
OPENCLAW_SLACK_ENABLED=false
OPENCLAW_SLACK_WELCOME="Hi! I'm Kai, your work assistant. How can I help?"

# =========================================
# Email Configuration (Phase 3)
# =========================================

# Email provider: ses, sendgrid, or resend
EMAIL_PROVIDER=ses

# AWS SES settings
AWS_SES_REGION=us-east-1

# SendGrid API key (if using SendGrid)
SENDGRID_API_KEY=

# =========================================
# Calendar Sync (Phase 4)
# =========================================

# Google Calendar OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Microsoft/Outlook OAuth
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
